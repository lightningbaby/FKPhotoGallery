<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/textSelectHandle"
        android:id="@+id/tweet_portrait_image_view"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_author_text_view"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_centerHorizontal="false"
            android:layout_toRightOf="@id/tweet_portrait_image_view"/>

        <TextView
            android:text="TextView"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_body_text_view"
            android:lines="3"
            android:ellipsize="end"
            android:layout_below="@id/tweet_author_text_view" />





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line"
        android:id="@+id/line"
        android:layout_below="@id/tweet_body_text_view"/>

</RelativeLayout>